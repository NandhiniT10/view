@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">


        <div class="item active">
            <img src="~/Content/Images/mess.jpg" alt="">
            <div class="carousel-caption">
                <h1 style="color: white; font-weight:bold">Tasty | Delicious | Savoury</h1>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/mess1.jpg" alt="">

        </div>

        <div class="item">
            <img src="~/Content/Images/mess2.jpg" alt="">
            <div class="carousel-caption">
                <h1 style="color: white; font-weight:bold">Making people happy through food</h1>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br>
<h1 class="tagline">The Best tasty & </h1> <p class="tag-subline">healthy food</p>



<!-- Cards -->

<div class="row">
    <div class="column">
        <div class="card">
            <img class="card-img-top" src="~/Content/Images/card1.jpg" alt="" style="width:100%">
            <h2>VEG</h2>
            <p class="card-text">A diet based on a wide variety of whole plant foods such as fruits, vegetables, whole grains, legumes, nuts and seeds.</p>
        </div>
    </div>

    <div class="column">
        <div class="card">
            <img class="card-img-top" src="~/Content/Images/card2.jpg" alt="" style="width:100%">
            <h2>NON-VEG</h2>
            <p class="card-text">A non-vegetarian diet also has several health benefits because this type of food is rich in protein and vitamin B.</p>
        </div>
    </div>

    <div class="column">
        <div class="card">
            <img class="card-img-top" src="~/Content/Images/card3.jpg" alt="" style="width:100%">
            <h2>FAST FOODS</h2>
            <p class="card-text">Fast food is popular because the food is inexpensive, convenient, and tastes good.</p>
        </div>
    </div>

    <div class="column">
        <div class="card">
            <img class="card-img-top" src="~/Content/Images/card4.jpg" alt="" style="width:100%">
            <h2>DESSERTS</h2>
            <p class="card-text">A dessert is a type of food that is eaten after lunch or dinner, and sometimes after a light meal or snack. It is usually a sweet food, like ice cream, cookies, and cakes. In some countries, cheeses such as Brie cheese and fruit are served as dessert.</p>
        </div>
    </div>
</div>
<style>


    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        padding: 16px;
        text-align: center;
        background-color: #ffc300;
        height: 410px;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .column {
        float: left;
        width: 25%;
        padding: 0 10px;
    }

    .row {
        margin: 0 -5px;
    }

        .row:after {
            display: table;
            clear: both;
        }


    img {
        border-radius: 5px 5px 0 0;
    }

    .column {
        padding: 2px 16px;
    }

    .tagline {
        text-align: center;
        font-family: 'Ink Free';
        font-weight: bold;
        font-size: 55px;
        color: orangered;
    }

    .tag-subline {
        text-align: center;
        padding-top: 0px;
        padding-bottom: 10px;
        font-family: 'Ink Free';
        font-size: 35px;
        color: #535353;
    }
</style>
